extends ../layouts/application.pug

block header
  = t('views.users.edit.header')

block content
  +formFor()(action=route('updateUser', { id: user.id }) method='post')
    input(name="_method" type="hidden" value="patch")
    +input(user, 'email', t('entities.user.email'), errors)(type="text")
    +input(user, 'password', t('entities.user.password'), errors)(type="password")
    +input(user, 'firstName', t('entities.user.firstName'), errors)(type="text")
    +input(user, 'lastName', t('entities.user.lastName'), errors)(type="text")
    +submit(user)(value=t('views.users.edit.submit'))
