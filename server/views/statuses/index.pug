extends ../layouts/application.pug

block content
  a.nav-link(href=route('newStatus'))= t('views.statuses.index.new')
  table.table
    thead
      tr
        th(scope="col")= t('views.statuses.id')
        th(scope="col")= t('views.statuses.name')
        th(scope="col")
    tbody
      each status in statuses
        tr
          td(scope="col")= status.id
          td(scope="col")= status.name
          td(scope="col")
            a(href=route('editStatus', { id: status.id }))= t('views.statuses.index.edit')
            +buttonTo(route('deleteStatus', { id: status.id }), 'delete')(class="btn btn-link" value=t('views.statuses.index.delete'))


