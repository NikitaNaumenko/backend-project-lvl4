extends ../layouts/application.pug

block header
  = t('views.statuses.edit.header')

block content
  +formFor()(action=route('statuses') method='post')
    input(name="_method" type="hidden" value="patch")
    +input(status, 'name', t('entities.status.name'), errors)(type="text")
    +submit(status)(value=t('views.statuses.edit.submit'))

